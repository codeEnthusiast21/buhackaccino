<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outermost glow (light purple) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="35dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="150dp"
                android:startColor="#8A6AF3"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Middle glow (blue) -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="34dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="150dp"
                android:startColor="#4D98F5"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Inner glow (blue) -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="33dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="150dp"
                android:startColor="#2D7DE1"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Transparent center to make it a border only -->
    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape android:shape="rectangle">
            <corners android:radius="30dp" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>